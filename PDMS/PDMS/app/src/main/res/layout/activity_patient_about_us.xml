<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatientAboutUs">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity = "center_horizontal"
            app:cardCornerRadius="20dp">
            <TextView
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:padding="12dp"
                android:text="Doctor Patient Management System"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:textStyle="bold" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id = "@+id/text"
            android:layout_width="match_parent"
            android:layout_height="101dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="8dp"
            android:text="This is is a mobile application that will help patients schedule their appointments with doctors online. In order to accomplish this, Team 8 used Java and XML code on Android Studio 4.1.0. To learn more from us, follow us on social media like Instagram, Facebook, etc."
            android:textColor="@color/white"
            android:textSize="12dp" />

        <ImageView
            android:id = "@+id/action_image"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:src="@drawable/doctorpatienticon" />

    </LinearLayout>

</LinearLayout>