<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DoctorPrescription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id = "@+id/editTextDoctorName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:text="Doctor Name: "
            android:textColor="@color/purple_700"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id = "@+id/editTextDoctorAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:text="Address: "
            android:textColor="@color/purple_700"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextPatientName"
            android:layout_width="196dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Patient Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="206dp"
            android:layout_height="47dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="150dp"
            android:layout_marginBottom="150dp"
            android:hint="Phone Number"
            android:paddingLeft="10dp"
            android:textSize="18dp"
            />

        <EditText
            android:id="@+id/editTextAddress"
            android:layout_width="197dp"
            android:layout_height="48dp"
            android:layout_marginTop="-160dp"
            android:ems="10"
            android:hint="Address" />


        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="80dp"
            android:layout_height="47dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="-40dp"
            android:hint="Age" />

        <EditText
            android:id="@+id/editTextGender"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="-40dp"
            android:hint="Gender" />


        <EditText
            android:id="@+id/editTextNote"
            android:layout_width="400dp"
            android:layout_height="160dp"
            android:ems="10"
            android:gravity="center"
            android:layout_marginTop = "10dp"
            android:layout_marginLeft="10dp"
            android:hint="Write prescription" />

        <EditText
            android:id="@+id/editTextSignature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Signature" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="-45dp"
            android:ems="10"
            android:hint="Date: " />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity = "center_horizontal"
            android:text = "Prescribe"
            android:id = "@+id/btn_add" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity = "center_horizontal"
            android:text = "Prescriptions"
            android:id = "@+id/btn_display" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>